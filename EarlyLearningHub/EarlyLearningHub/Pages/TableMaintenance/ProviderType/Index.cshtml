@page
@model EarlyLearningHub.Pages.TableMaintenance.ProviderType.IndexModel

@{
    ViewData["Title"] = "Provider Type";
}

@*<h2>Index</h2>*@

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.ProviderType[0].PtName)
                </a>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProviderType)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PtName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PtId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PtId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PtId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.ProviderType.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.ProviderType.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.ProviderType.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.ProviderType.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @nextDisabled">
    Next
</a>
